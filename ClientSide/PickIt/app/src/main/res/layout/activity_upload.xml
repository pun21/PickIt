<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.spun.pickit.UploadActivity">

    <!-- Navigation menu bar -->

    <!-- change to ImageButton once it has icon -->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="home_icon"
        android:id="@+id/button_category"
        android:onClick="onClickNavHome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_out"
        android:id="@+id/textView_sign_out"
        android:clickable="true"
        android:onClick="onClickSignOut"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:id="@+id/textView_username"
        android:clickable="true"
        android:onClick="onClickUsername"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView_sign_out" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload"
        android:id="@+id/button_upload"
        android:onClick="onClickUpload"
        android:layout_gravity="left|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/button_category"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/gridLayout"
        android:layout_marginBottom="180dp"
        android:layout_alignEnd="@+id/textView_sign_out">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0">

            <ImageView
                android:layout_width="139dp"
                android:layout_height="139dp"
                android:id="@+id/imageView"
                android:layout_gravity="left|top" />

            <ImageButton
                android:layout_width="51dp"
                android:layout_height="42dp"
                android:id="@+id/imageButton"
                android:background="@drawable/ic_action_new_picture"
                android:layout_gravity="left|top" />

            <ImageButton
                android:layout_width="62dp"
                android:layout_height="52dp"
                android:id="@+id/imageButton2"
                android:background="@drawable/ic_action_camera"
                android:layout_gravity="center_horizontal|top" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="182dp"
            android:layout_height="157dp"
            android:layout_row="0"
            android:layout_column="1">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:layout_gravity="left|top" />

            <ImageButton
                android:layout_width="68dp"
                android:layout_height="57dp"
                android:id="@+id/imageButton3"
                android:background="@drawable/ic_action_new_picture"
                android:layout_gravity="left|top" />

            <ImageButton
                android:layout_width="57dp"
                android:layout_height="48dp"
                android:id="@+id/imageButton4"
                android:background="@drawable/ic_action_camera"
                android:layout_gravity="center_horizontal|top" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="197dp"
            android:layout_height="179dp"
            android:layout_row="3"
            android:layout_column="0">

            <ImageView
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:id="@+id/imageView3"
                android:layout_gravity="left|top" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="58dp"
                android:id="@+id/imageButton5"
                android:background="@drawable/ic_action_new_picture"
                android:layout_gravity="left|top" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="58dp"
                android:id="@+id/imageButton6"
                android:background="@drawable/ic_action_camera"
                android:layout_gravity="center_horizontal|top" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="170dp"
            android:layout_height="192dp"
            android:layout_row="3"
            android:layout_column="1">

            <ImageView
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:id="@+id/imageView4"
                android:layout_gravity="left|top" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton7"
                android:background="@drawable/ic_action_new_picture"
                android:layout_gravity="left|top" />

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="46dp"
                android:id="@+id/imageButton8"
                android:background="@drawable/ic_action_camera"
                android:layout_gravity="center_horizontal|top" />
        </FrameLayout>
    </GridLayout>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textField_pickit_heading"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:layout_below="@+id/button_category"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView_sign_out" />


</RelativeLayout>
