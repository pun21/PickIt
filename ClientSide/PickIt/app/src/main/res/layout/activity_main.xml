<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.spun.pickit.MainActivity">
    <!-- Navigation menu bar -->
    <!-- change to ImageButton once it has icon -->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3bars_icon"
        android:id="@+id/button_category"
        android:onClick="onClickNavCategory"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_out"
        android:id="@+id/textView_sign_out"
        android:clickable="true"
        android:onClick="onClickSignOut"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:id="@+id/textView_username"
        android:clickable="true"
        android:onClick="onClickUsername"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView_sign_out" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_action_new"
        android:id="@+id/button_upload"
        android:onClick="onClickNavUpload"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_category" />
    <!-- end of Navigation menu bar -->
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="@string/recency"
        android:textOn="@string/recency"
        android:id="@+id/toggle_recency"
        android:onClick="onClickRecencyToggle"
        android:layout_below="@+id/button_category"
        android:layout_alignParentStart="true" />
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="@string/trending"
        android:textOn="@string/trending"
        android:id="@+id/toggle_trending"
        android:onClick="onClickTrendingToggle"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/toggle_recency"
        android:layout_toEndOf="@+id/toggle_recency" />
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="@string/time_remaining"
        android:textOn="@string/time_remaining"
        android:id="@+id/toggle_time_remaining"
        android:onClick="onClickTimeRemainingToggle"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/toggle_trending"
        android:layout_toEndOf="@+id/toggle_trending" />
</RelativeLayout>