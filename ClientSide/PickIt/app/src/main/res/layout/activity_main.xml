<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_activity_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_activity_table"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/PrimaryColor">

        <TableRow
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/PrimaryColor"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textView_appName"
                android:text="@string/app_name"
                android:clickable="true"
                android:onClick="onClickAppName"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textStyle="bold|italic"
                android:textSize="30sp"
                android:layout_weight="2"
                android:textColor="@color/SecondaryColor"/>

            <TextView
                android:id="@+id/textView_username"
                android:text="@string/username"
                android:clickable="true"
                android:onClick="onClickUsername"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold|italic"
                android:textSize="30sp"
                android:textColor="@color/SecondaryColor"
                android:layout_gravity="end|top"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/PrimaryColor"
            android:paddingRight="5dp"
            android:paddingLeft="5dp" >

            <ToggleButton
                android:id="@+id/toggle_trending"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/custom_upload_border"
                android:textSize="12sp"
                android:textOff="@string/trending"
                android:textOn="@string/trending_selected"
                android:onClick="onClickTrendingToggle"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"/>

            <ToggleButton
                android:id="@+id/toggle_recency"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/custom_upload_border"
                android:textSize="12sp"
                android:textOff="@string/recency"
                android:textOn="@string/recency_selected"
                android:onClick="onClickRecencyToggle"
                android:layout_weight="1"/>

            <ToggleButton
                android:id="@+id/toggle_time_remaining"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/custom_upload_border"
                android:textSize="12sp"
                android:textOff="@string/expiring"
                android:textOn="@string/expiring_selected"
                android:onClick="onClickTimeRemainingToggle"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:background="@color/PrimaryColor"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/custom_table_border"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <ListView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/list"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                </ListView>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/PrimaryColor"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_margin="5dp">

            <Spinner
                android:id="@+id/category_menu_main"
                android:background="@drawable/custom_table_border"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_weight="5"
                android:layout_marginEnd="20dp"/>

            <ImageButton
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/button_upload"
                android:src="@drawable/ic_action_camera"
                android:onClick="onClickUpload"
                android:background="@drawable/custom_background"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="2"/>
        </TableRow>
    </TableLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:visibility="invisible"
        android:minHeight="100sp"
        android:minWidth="100sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

</RelativeLayout>
