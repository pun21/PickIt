<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_marginBottom="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_table_row">

        <TextView
            android:id="@+id/upload_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"/>
    </TableRow>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="473dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/description_table_row">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal">

                <FrameLayout
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin">

                    <ImageView
                        android:id="@+id/row0column0"
                        android:contentDescription="@string/topLeftPane"
                        android:background="@drawable/custom_upload_border"
                        android:layout_width="139dp"
                        android:layout_height="139dp"
                        android:onClick="onClickChoice"
                        android:layout_gravity="start|top" />

                </FrameLayout>

                <FrameLayout
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin">

                    <ImageView
                        android:id="@+id/row0column1"
                        android:contentDescription="@string/topLeftPane"
                        android:background="@drawable/custom_upload_border"
                        android:layout_width="139dp"
                        android:layout_height="139dp"
                        android:onClick="onClickChoice"
                        android:layout_gravity="start|top" />

                </FrameLayout>

                <FrameLayout
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin">

                    <ImageView
                        android:id="@+id/row1column0"
                        android:contentDescription="@string/topLeftPane"
                        android:background="@drawable/custom_upload_border"
                        android:layout_width="139dp"
                        android:layout_height="139dp"
                        android:onClick="onClickChoice"
                        android:layout_gravity="start|top" />

                </FrameLayout>

                <FrameLayout
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin">

                    <ImageView
                        android:id="@+id/row1column1"
                        android:contentDescription="@string/topLeftPane"
                        android:background="@drawable/custom_upload_border"
                        android:layout_width="139dp"
                        android:layout_height="139dp"
                        android:onClick="onClickChoice"
                        android:layout_gravity="start|top" />

                </FrameLayout>
            </GridLayout>

            <Button
                android:id="@+id/button_vote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/vote"
                android:onClick="onClickVote"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_table_border"
                android:textColor="#ff417286"
                android:textStyle="bold|italic"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"/>
        </TableLayout>
    </ScrollView>
</RelativeLayout>