<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/results_activity_table"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/PrimaryColor"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView_username"
            android:text="@string/username"
            android:clickable="true"
            android:onClick="onClickUsername"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/SecondaryColor" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/upload_description"
            android:textSize="25sp"
            android:textColor="@color/PrimaryColor"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_table_border"
            android:gravity="center"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@drawable/custom_table_border"
        android:layout_weight="3">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TableRow
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/row0column0"
                        android:onClick="onClickChoice"
                        android:contentDescription="@string/topLeftPane"
                        android:background="@drawable/custom_upload_border"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxHeight="150dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/row0column1"
                        android:onClick="onClickChoice"
                        android:contentDescription="@string/topLeftPane"
                        android:background="@drawable/custom_upload_border"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxHeight="150dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/r0c0_text"
                        android:textSize="25sp"
                        android:textColor="@color/PrimaryColor"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/r0c1_text"
                        android:textSize="25sp"
                        android:textColor="@color/PrimaryColor"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow>
                    <ImageView
                        android:id="@+id/row1column0"
                        android:onClick="onClickChoice"
                        android:contentDescription="@string/topLeftPane"
                        android:background="@drawable/custom_upload_border"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxHeight="150dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/row1column1"
                        android:onClick="onClickChoice"
                        android:contentDescription="@string/topLeftPane"
                        android:background="@drawable/custom_upload_border"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxHeight="150dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/r1c0_text"
                        android:textSize="25sp"
                        android:textColor="@color/PrimaryColor"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/r1c1_text"
                        android:textSize="25sp"
                        android:textColor="@color/PrimaryColor"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"/>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </TableRow>
</TableLayout>

