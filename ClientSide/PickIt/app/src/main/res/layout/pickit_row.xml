<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <!-- Thumbnail Image -->
    <ImageView
        android:id="@+id/image_tl"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <ImageView
        android:id="@+id/image_tr"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/image_tl"
        android:layout_marginRight="8dp" />

    <ImageView
        android:id="@+id/image_bl"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/image_tl"
        android:layout_marginRight="8dp" />

    <ImageView
        android:id="@+id/image_br"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/image_bl"
        android:layout_below="@id/image_tr"
        android:layout_marginRight="8dp" />

    <!-- Movie Title -->
    <TextView
        android:id="@+id/heading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_tl"
        android:layout_toEndOf="@+id/image_tr"
        android:textSize="@dimen/heading"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Rating -->
    <TextView
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:layout_marginTop="1dip"
        android:layout_toEndOf="@+id/image_tr"
        android:textSize="@dimen/username"
        android:textColor="#ff1024ff" />

    <!-- Genre -->
    <TextView
        android:id="@+id/category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/image_tr"
        android:textColor="#000000"
        android:textSize="@dimen/category" />

    <!-- Release Year -->
    <TextView
        android:id="@+id/voting_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category"
        android:layout_toEndOf="@+id/image_tr"
        android:textColor="#000000"
        android:textSize="@dimen/voting_time" />

</RelativeLayout>


